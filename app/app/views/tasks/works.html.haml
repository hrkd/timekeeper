.form-inline.month-picker
  = select :pick, :month, @selected_month, {:selected=>@month}, { class: "form-control" }
  = select :pick, :year, @selected_year, {:selected=>@year}, { class: "form-control" }

  %button.btn.btn-primary
    表示

%h2
  = "稼働時間 #{@persent}% ( #{@sum} / #{@max} )"
%h3
  = "稼働可能日数:#{@days}日"
%h4
  = "#{@amount} / #{@max_amount}"


%table.table.table-striped
  %tr
    %th
      = :start
    %th
      = :end
    %th
      break time for 1 hour
    %th
      = :duration
  -@works.each do |var|
    %tr
      %td
        = var[:start]
      %td
        = var[:end]
      %td
        = (var[:break]) ? "-1 hour":""
      %td
        = var[:duration_s]
